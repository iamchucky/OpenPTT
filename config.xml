<?xml version='1.0' encoding='utf-8'?>
<widget id="org.openptt.openptt" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OpenPTT</name>
    <description>
        A telnet client specifically designed for PTT browsing.
    </description>
    <author email="ettoolong@hotmail.com" href="https://github.com/OpenPTT/OpenPTT">
        OpenPTT Team
    </author>
    <content src="index.html" />
    <hook src="scripts/ng_build" type="before_prepare" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-console" spec="~1.0.4" />
</widget>
